[colors]

## Base16 OceanicNext
# Author: https://github.com/voronianski/oceanic-next-color-scheme
#
# You can use these variables anywhere in the i3 configuration file.
#
base00 = #1B2B34
base01 = #343D46
base02 = #4F5B66
base03 = #65737E
base04 = #A7ADBA
base05 = #C0C5CE
base06 = #CDD3DE
base07 = #D8DEE9
base08 = #EC5f67
base09 = #F99157
base0A = #FAC863
base0B = #99C794
base0C = #5FB3B3
base0D = #6699CC
base0E = #C594C5
base0F = #AB7967

[bar/mybar]
width = 100%
height = 27
fixed-center = true 
bottom = true

background = ${colors.base00}
foreground = ${colors.base07}

line-size = 2
line-color = ${colors.base0D}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "Ubuntu Mono:size=10;2"
font-1 = unifont:fontformat=truetype:size=8:antialias=false
font-2 = siji:pixelsize=10
font-3 = FontAwesome:pixelsize=10;2

modules-left = i3
modules-center = xwindow
modules-right = weather date powermenu

tray-position = right
tray-background = ${colors.base0C}

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/weather]
type = custom/script
interval = 1800
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.base07}
exec = ~/.config/polybar/weather

[module/xwindow]
type = internal/xwindow
label = %title%

[module/i3]
type = internal/i3
index-sort = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = true

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction 
; Default: true
reverse-scroll = true

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
fuzzy-match = true

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
;label-mode-padding = 2
label-mode-background = #EC5f67

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = 
;label-focused-foreground = #ffffff
;label-focused-background = #EC5f67
label-focused-underline = ${colors.base0B}
label-focused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = 
label-unfocused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 5

date = "%a %d-%m-%Y"
time = %H:%M

format-prefix = "  "
format-prefix-foreground = ${colors.base07}


label = %date%    %time%


[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-foreground = ${colors.base07}
label-close =  cancel
label-close-foreground = ${colors.base08}
label-separator = |
label-separator-foreground = ${colors.base06}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot; mode "default"

menu-2-0 = power off
menu-2-0-exec = systemctl poweroff; mode "default"
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true


[global/wm]
margin-top = 5
margin-bottom = 5


